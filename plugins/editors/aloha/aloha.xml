<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="editors" method="upgrade">
	<name>PLG_EDITORS_ALOHA_NAME</name>
    <author>Amy Stephen</author>
    <creationDate>May 2011</creationDate>
    <authorEmail>AmyStephen@gmail.com</authorEmail>
    <authorUrl>http://molajo.org</authorUrl>
	<description>PLG_EDITORS_ALOHA_XML_DESCRIPTION</description>
    <copyright>Copyright (C) 2011 Amy Stephen. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later http://www.gnu.org/licenses/gpl.html</license>
	<files>
		<filename plugin="aloha">aloha.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<media destination="editors">
		<folder>aloha</folder>
	</media>
	<config>
        <fields name="params">
            <fieldset name="basic">
                <field type="radio" name="cleanup" label="Cleanup">
                        <option value="true">JYES</option>
                        <option value="false">JNO</option>
                </field>
                <fields name="buttons">
                    <field type="radio" name="default" label="Default Buttons">
                        <option value="bold italic underline strikethrough insertunorderedlist insertorderedlist indent outdent undo redo unlink createlink urlimage">JYES</option>
                        <option value="">JNO</option>
                    </field>
                    <field type="radio" name="extended" label="Extended Buttons">
                        <option value=" | formatBlock justifyleft justifyright justifycenter justifyfull removeformat insertHorizontalRule">JYES</option>
                        <option value="">JNO</option>
                    </field>
                    <field type="radio" name="table" label="Tablefeature">
                        <option value=" | tableadd tableedit tablerowadd tablerowedit tablerowspan tablerowsplit tablerowdelete tablecoladd tablecoledit tablecolspan tablecolsplit tablecoldelete">JYES</option>
                        <option value="">JNO</option>
                    </field>
                </fields>
            </fieldset>
        </fields>
	</config>
</extension>
