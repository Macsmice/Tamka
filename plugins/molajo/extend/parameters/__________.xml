<?xml version="1.0" encoding="utf-8"?>
<form>
        <fields name="params">

            <fieldset
                name="xyzxyz"
                addfieldpath="/plugins/system/extend/fieldtypes/custom"
                >
                <field
                    name="xyzxyz_section"
                    type="spacer"
                    hr="false"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_ABSTRACT_SECTION_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_ABSTRACT_SECTION_DESC"
                    />

                <field
                    name="xyzxyz_section"
                    type="spacer"
                    hr="false"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_SECTION_PUBLISHING_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_SECTION_PUBLISHING_DESC"
                    />

                <field
                    name="xyzxyz_enable"
                    type="radio"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_DESC"
                    default="0"
                    >
                    <option
                            value="0">JNO</option>
                    <option
                            value="1">JYES</option>
                </field>

                <field
                    name="xyzxyz_section_publishing"
                    type="spacer"
                    hr="true"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_SECTION_PUBLISHING_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_SECTION_PUBLISHING_DESC"
                    />

		<field
                    name="xyzxyz_published_criteria"
                    type="list"
                    default="1"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_PUBLISHED_DESC"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_PUBLISHED_LABEL"
                    size="1"
                    >
                    <option value="1">JPUBLISHED</option>
                    <option value="0">JUNPUBLISHED</option>
		</field>

		<field
                    name="xyzxyz_publish_up_criteria"
                    type="calendar"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_PUBLISH_UP_DESC"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_PUBLISH_UP_LABEL"
                    filter="date"
                    />

		<field
                    name="xyzxyz_publish_down_criteria"
                    type="calendar"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_PUBLISH_DOWN_DESC"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_PUBLISH_DOWN_LABEL"
                    filter="date"
                    />

		<field
                    name="xyzxyz_access_criteria"
                    type="accesslevel"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_ACCESS_DESC"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_ACCESS_LABEL"
                    size="1"
		/>

		<field
                    name="xyzxyz_language_criteria"
                    type="contentlanguage"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_LANGUAGE_DESC"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_LANGUAGE_LABEL"
                    >
                    <option value="*">JALL</option>
		</field>

                <field
                    name="xyzxyz_section_scope"
                    type="spacer"
                    hr="true"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_SECTION_SCOPE_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_SECTION_SCOPE_DESC"
                    />

                <field
                    name="xyzxyz_client_criteria"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_CLIENT_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_CLIENT_DESC"
                    type="list"
                    default=""
                    >
                    <option
                            value="">JNOTCRITERIA</option>
                    <option
                            value="0">JFRONTEND</option>
                    <option
                            value="1">JADMINISTRATOR</option>
                </field>

                <field
                    name="xyzxyz_component_criteria"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_COMPONENT_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_COMPONENT_DESC"
                    type="extension"
                    extensiontype="component"
                    multiple="true"
                    size="4"
                    default=""
                    >
                    <option
                            value="">JNOTCRITERIA</option>
                </field>

                <field
                    name="xyzxyz_category_criteria"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_CATEGORY_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_CATEGORY_DESC"
                    type="category"
                    extension=""
                    multiple="true"
                    size="4"
                    >
                    <option
                            value="">JNOTCRITERIA</option>
                </field>

                <field
                    name="xyzxyz_menu_item_criteria"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_MENUITEM_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_MENUITEM_DESC"
                    type="menuitem"
                    extension=""
                    multiple="true"
                    size="4"
                    >
                    <option
                            value="">JNOTCRITERIA</option>
                </field>

                <field
                    name="xyzxyz_content_item_criteria"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_ITEM_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_ITEM_LABEL"
                    class="inputbox"
                    type="textarea"
                    rows="2"
                    cols="50"
                    />

                <field
                    name="xyzxyz_forms_criteria"
                    label="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_TARGET_FORMS_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_CONTENTTYPE_TARGET_FORMS_DESC"
                    class="inputbox"
                    type="textarea"
                    rows="2"
                    cols="50"
                    />

                <field
                    name="xyzxyz_sql_table_name"
                    type="hidden"
                    default=""
                    label="PLG_SYSTEM_EXTEND_PARAMETER_GLOBAL_SQL_TABLE_NAME_LABEL"
                    description="PLG_SYSTEM_EXTEND_PARAMETER_GLOBAL_SQL_TABLE_NAME_DESC"
                    filter="string"
                    >
                </field>
            </fieldset>
    </fields>
</form>