<?xml version="1.0" encoding="utf-8"?>
<form>
        <fields name="attribs">

            <fieldset
                name="social"
                label="PLG_SYSTEM_EXTEND_SLIDER_SOCIAL_LABEL"
                addfieldpath="/plugins/system/extend/fieldtypes/custom"
                >

               <field
                    name="share_profile"
                    type="radio"
                    label="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_SHARE_PROFILE_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_SHARE_PROFILE_DESC"
                    default="0">
                    <option
                            value="0">JNO</option>
                    <option
                            value="1">JYES</option>
                </field>

                <field
                    name="relationship"
                    type="list"
                    label="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_RELATIONSHIP_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_RELATIONSHIP_DESC"
                    default="6">
                    <option
                            value="0">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_ENGAGED</option>
                    <option
                            value="1">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_WIDOWED</option>
                    <option
                            value="2">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_MARRIED</option>
                    <option
                            value="3">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_RELATIONSHIP</option>
                    <option
                            value="4">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_SINGLE</option>
                    <option
                            value="5">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_HOPELESS</option>
                   <option
                            value="6">PLG_SYSTEM_EXTEND_OPTION_SOCIAL_RELATIONSHIP_NO_RESPONSE</option>
                </field>

                <field
                        name="religion"
                        default=""
                        description="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_RELIGION_DESC"
                        label="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_RELIGION_LABEL"
                        size="20"
                        type="text"
                    />

                <field
                    name="birthdate"
                    type="calendar"
                    label="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_BIRTHDATE_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_SOCIAL_BIRTHDATE_DESC"
                    filter="date"
                    >
                </field>

            </fieldset>
    </fields>
</form>