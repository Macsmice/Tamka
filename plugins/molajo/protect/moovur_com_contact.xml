<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="moovur">
	<name>Moovur - com_contact</name>
	<author>Moovum</author>
	<creationDate>February 2009</creationDate>
	<copyright>Copyright (C) 2009 Moovum. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>development@moovum.com</authorEmail>
	<authorUrl>www.moovum.com</authorUrl>
	<version>1.0.0RC1</version>
	<group>moovur</group>
	<description>Provides Moovur support for com_contact tasks</description>
	<files>
		<filename plugin="moovur_com_contact">moovur_com_contact.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_moovur_moovur_com_contact.ini</language>
	</languages>
	<params>
		<param name="check_contact" type="radio" default="1" label="Check Submitted Contact With Mollom" description="Check submitted contact using Mollom's spam checking service">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="display_contact" type="radio" default="1" label="Display Contact Form Captcha" description="Display Captcha for contact forms.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="test_contact" type="radio" default="1" label="Check Contact Form Captcha" description="Check return of Captcha for contact forms (Used for custom templates using Moovur code)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
