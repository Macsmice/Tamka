<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/template-install.dtd">
<install type="template" version="1.6" client="administrator" method="upgrade">
    <name>Minima</name>
    <creationDate>July 2010</creationDate>
    <author>Marco Barbosa</author>
    <authorEmail>iam@marcobarbosa.com</authorEmail>
    <authorUrl>http://minimatemplate.com</authorUrl>
    <copyright>Copyright (C) 2010 Marco Barbosa. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>0.9</version>
    <description>TPL_MINIMA_XML_DESCRIPTION</description>
    <!-- Extension Update Specification -->
    <updateservers>
        <server type="extension" priority="1" name="Minima Update Site">http://minimatemplate.com/update/templates/minima/extension.xml</server>
        <server type="collection" priority="2" name="Minima Update Site">http://minimatemplate.com/update/update.xml</server>
    </updateservers>
    <!--  Dependencies -->
    <dependencies>
        <dependency type="platform" name="joomla" operator="=" version="1.6" />
    </dependencies>
    <!-- Files -->
    <files>
        <filename>component.php</filename>
        <filename>cpanel.php</filename>
        <filename>error.php</filename>
        <filename>favicon.ico</filename>
        <filename>humans.txt</filename>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>login.php</filename>
        <filename>logo_minima.png</filename>
        <filename>PIE.htc</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>elements</folder>
        <folder>html</folder>
        <folder>language</folder>
        <folder>images</folder>
        <folder>js</folder>
    </files>
    <!-- Languages -->
    <languages>
        <language tag="de-DE">language/de-DE/de-DE.tpl_minima.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.tpl_minima.ini</language>
        <language tag="es-ES">language/es-ES/es-ES.tpl_minima.ini</language>
        <language tag="nb-NO">language/nb-NO/nb-NO.tpl_minima.ini</language>
        <language tag="pt-BR">language/pt-BR/pt-BR.tpl_minima.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.tpl_minima.ini</language>
        <language tag="sv-SE">language/sv-SE/sv-SE.tpl_minima.ini</language>
    </languages>
    <!-- Positions -->
    <positions>
        <position>cp_shell</position>
        <position>debug</position>
        <position>footer</position>
        <position>icon</position>
        <position>menu</position>
        <position>panel</position>
        <position>title</position>
        <position>toolbar</position>
        <position>shortcuts</position>
        <position>submenu</position>
        <position>status</position>
        <position>search</position>
        <position>widgets-first</position>
        <position>widgets-last</position>
    </positions>
    <!-- Params -->
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    type="loader" 
                    label="" 
                    name="Loader" 
                    addfieldpath="/administrator/templates/minima/elements" />
                <field
                    name="templateColor"
                    type="text"
                    default="#2A94C8"
                    label="TPL_MINIMA_COLOR_LABEL"
                    description="Choose the main color of the template (default is #2A94C8)"
                    size="10" />
                <field
                    name="darkerColor"
                    type="hidden"
                    default="#247eaa"
                    label="" />
            </fieldset>
        </fields>
    </config>
</install>
